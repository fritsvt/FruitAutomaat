<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/imgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="70dp"
            android:layout_height="165dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/fruit_1" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="70dp"
            android:layout_height="165dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/fruit_1" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="70dp"
            android:layout_height="165dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/fruit_1" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="10 Credits"
        android:layout_below="@+id/imgs"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="110dp"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/imgs"
        android:layout_below="@+id/msg"
        android:layout_marginTop="21dp"
        android:text="Start" />

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn"
        android:layout_toEndOf="@+id/btn"
        android:text="10 credits kopen" />

</RelativeLayout>